<Page x:ConnectionId='1'
    x:Class="Pinturillo.PantallaJuego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Pinturillo.ViewModels"
    xmlns:local1="using:Pinturillo.Utils"
    mc:Ignorable="d"
   Background="{StaticResource PrimaryColor}">

    <Page.DataContext>
        <vm:VMPantallaJuego></vm:VMPantallaJuego>
    </Page.DataContext>

    <Page.Resources>
        <local1:LapizVisibilityConverter x:Key="LapizConverter"></local1:LapizVisibilityConverter>
        <local1:TrueToFalseConverter x:Key="TrueToFalseConverter"></local1:TrueToFalseConverter>

    </Page.Resources>
    
    <RelativePanel>
        <Border x:ConnectionId='2' 
            Name="borderStackPanel"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.Below="backArrow"
            RelativePanel.Above="backArrow"
            Width="150"
            Margin="10,10,0,10"
            BorderBrush="Red"   
                CornerRadius="30" 
                >
            <StackPanel x:ConnectionId='12'
            
               Opacity="0.75"
                
            Background="{StaticResource SecondaryColor}"
            Name="stkpanelListados"
            >
                <ListView x:ConnectionId='13'
                Name="listadoSalas"
                SelectionMode="None"
                ItemsSource="{Binding Partida.ListadoJugadores, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <RelativePanel
                        >
                                <AppBarButton
                                        Name="icon"
                                       IsEnabled="{Binding IsUltimaPalabraAcertada}"
                                Icon="Accept"
                                    Foreground="#50d890"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignTopWithPanel="True"
                                />


                                <AppBarButton
                                        Name="lapiz"
                                        Visibility="{Binding IsMiTurno,Mode=TwoWay, 
                                    UpdateSourceTrigger=PropertyChanged, 
                                    Converter={StaticResource LapizConverter}}"
                                        Icon="Edit"
                                        Foreground="#50d890"
                                        RelativePanel.Below="icon"
                                />

                                <TextBlock  
                                Foreground="#272727"
                                FontSize="15"
                                        Name="txtNombre"
                                        RelativePanel.AlignTopWithPanel="True"
                                        RelativePanel.RightOf="icon"
                                Margin="0,10,5,0" Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                        RelativePanel.Below="txtNombre"
                                    RelativePanel.AlignBottomWithPanel="True"
                                    RelativePanel.AlignLeftWithPanel="True"
                                        
                                
                                Foreground="#272727"
                                FontSize="10"
                                    Text="{Binding Puntuacion, Mode=TwoWay}"
                                ></TextBlock>

                            </RelativePanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>

        <Border x:ConnectionId='3'
            Name="borderCanvas"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.RightOf="borderStackPanel"
            RelativePanel.AlignBottomWithPanel="True"
            Margin="15"
            RelativePanel.LeftOf="chatMensajes"
            
            >
            <RelativePanel>
                <Border
                    Margin="15"
                    CornerRadius="100"
                    Padding="15"
                   
                    Background="#effffb"
                    Opacity="1"
                    >
                    <TextBlock
                        FontSize="50"
                        Text="{Binding LblTemporizador, Mode=TwoWay}"
                        Foreground="#272727"
                        >

                    </TextBlock>

                </Border>

                <TextBlock x:ConnectionId='9'
                    Name="palabra"
                    RelativePanel.AlignTopWithPanel="True"
                    Margin="15"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    FontSize="50"
                    Foreground="#effffb"
                    Text="{Binding PalabraAMostrar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    >

                </TextBlock>

                <TextBlock
                    RelativePanel.AlignBottomWithPanel="True"
                    Margin="15"
                    RelativePanel.AlignRightWithPanel="True"
                    FontSize="20"
                    Foreground="#effffb"
                   
                    Text="Ronda 1/3"
                    >

                </TextBlock>


                <Border
                    
                    Background="White"
                    Margin="10,25,10,10"
                    RelativePanel.Below="palabra"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    >
                    <InkCanvas x:ConnectionId='11' x:Name="inkCanvas"
                    RelativePanel.Below="palabra"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                      
                           />
                </Border>
                

                <InkToolbar x:ConnectionId='10' x:Name="inkToolbar"
                             IsEnabled="{Binding IsMiTurno, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged
                        }"
          VerticalAlignment="Top"
                           RelativePanel.AlignRightWithPanel="True"
                                                                        
                           InitialControls="PensOnly"
                           
                                               >
                    
                    <InkToolbarEraserButton ></InkToolbarEraserButton>
                </InkToolbar>


            </RelativePanel>

        </Border>




        <ListView x:ConnectionId='4'
            Name="chatMensajes"
            SelectionMode="None"
            Background="{StaticResource SecondaryColor}"
            Opacity="0.75"
            Windows10version1809:CornerRadius="30"
            RelativePanel.AlignLeftWith="inputMensajes"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignTopWith="borderStackPanel"
            RelativePanel.Above="inputMensajes"
            Margin="15"
                ItemsSource="{Binding Partida.ListadoMensajes}"
                >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock TextWrapping="Wrap">
                                <Run Text="{Binding JugadorQueLoEnvia.Nickname}" />
                                <Run Text=": " />
                                <Run Text="{Binding Mensaje}" />
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBox x:ConnectionId='5'
            Windows10version1809:CornerRadius="10,0,0,10"
            MaxLength="30"
            Name="inputMensajes"
            RelativePanel.LeftOf="btnSend"
            Width="140"
            IsEnabled="{Binding IsMiTurno, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged
            ,Converter={StaticResource TrueToFalseConverter}}"
            Margin="0,0,0,15"
            RelativePanel.AlignBottomWithPanel="True"
            Text="{Binding Mensaje.Mensaje,Mode=TwoWay}" 
            >

        </TextBox>
        
        <Button x:ConnectionId='6'
            Name="btnSend"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignBottomWithPanel="True"
            Margin="0,10,15,15"
            Windows10version1809:CornerRadius="0,10,10,0"
            Content="Enviar"
            Command="{Binding SendMessageCommand}"            
            >

        </Button>

        <Button x:ConnectionId='7' Name="backArrow"  RelativePanel.AlignLeftWithPanel="True"
              RelativePanel.AlignTopWithPanel="True"
        Background="#FF46B0CF" Margin="20,10,30,0" Command="{Binding GoBackCommand}">
            <StackPanel>
                <Image Source="Assets/photo.png" Height="62"/>
            </StackPanel>
        </Button>
    </RelativePanel>
</Page>

